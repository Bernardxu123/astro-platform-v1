---
import Layout from "../../layouts/Layout.astro";
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { getCollection } from "astro:content";

const allSoftware = await getCollection("software");
---

<Layout title="所有软件 - Astro Platform">
    <div class="container py-12 md:py-24">
        <div class="flex flex-col gap-4 mb-8">
            <h1 class="text-3xl font-bold tracking-tight">软件库</h1>
            <p class="text-muted-foreground">精选的生产力工具、开发者实用程序和系统增强软件集合。</p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {allSoftware.map((software) => (
                <Card>
                    <CardHeader>
                        <div class="flex items-start justify-between">
                            <CardTitle>{software.data.title}</CardTitle>
                            <Badge variant="outline">v{software.data.version}</Badge>
                        </div>
                        <Badge variant="secondary" className="w-fit">{software.data.category}</Badge>
                    </CardHeader>
                    <CardContent>
                        <p class="line-clamp-3 text-sm text-muted-foreground">
                            {software.data.description}
                        </p>
                    </CardContent>
                    <CardFooter>
                        <a href={`/software/${software.id}`} class="w-full">
                            <Button className="w-full">查看详情</Button>
                        </a>
                    </CardFooter>
                </Card>
            ))}
        </div>
    </div>
</Layout>
